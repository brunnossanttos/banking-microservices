{
  "name": "banking-microservices",
  "version": "1.0.0",
  "description": "Banking Microservices",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:clients": "npm run dev --workspace=@banking/clients-service",
    "dev:transactions": "npm run dev --workspace=@banking/transactions-service",
    "dev:all": "concurrently \"npm run dev:clients\" \"npm run dev:transactions\" --names \"clients,transactions\" --prefix-colors \"blue,green\"",
    "build:clients": "npm run build --workspace=@banking/clients-service",
    "build:transactions": "npm run build --workspace=@banking/transactions-service",
    "build:all": "npm run build --workspaces",
    "test:clients": "npm run test --workspace=@banking/clients-service",
    "test:transactions": "npm run test --workspace=@banking/transactions-service",
    "test": "npm run test --workspaces",
    "lint": "eslint 'packages/*/src/**/*.ts' --fix",
    "format": "prettier --write 'packages/*/src/**/*.ts'",
    "docker:up": "docker compose --env-file .env -f docker/docker-compose.yml up -d",
    "docker:down": "docker compose --env-file .env -f docker/docker-compose.yml down",
    "docker:logs": "docker compose --env-file .env -f docker/docker-compose.yml logs -f",
    "docker:infra": "docker compose --env-file .env -f docker/docker-compose.yml up -d postgres-customer postgres-transaction redis rabbitmq",
    "docker:services:stop": "docker stop banking-clients-service banking-transactions-service 2>nul || echo Services stopped",
    "kill:ports": "powershell -Command \"Get-NetTCPConnection -LocalPort 3001,3002 -ErrorAction SilentlyContinue | ForEach-Object { Stop-Process -Id $_.OwningProcess -Force -ErrorAction SilentlyContinue }\" || echo Ports cleared",
    "dev:local": "npm run kill:ports && npm run docker:infra && npm run docker:services:stop && npm run dev:all"
  },
  "keywords": [
    "microservices",
    "banking",
    "nodejs",
    "typescript"
  ],
  "author": "Bruno Santos",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
